@model IEnumerable<StudentManagerMVC.Models.StudentModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Student Manager</h1>
    <a asp-action="Create" class="btn btn-outline-info mt-4 ml-auto">New Student</a>
    <div class="p-4 border border-dark mt-4">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Stream</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.id</th>
                        <td>@item.name</td>
                        <td>@item.email</td>
                        <td>@item.stream</td>
                        <td>
                            <div class="d-flex flex-row justify-content-between">
                                <a type="button" asp-action="Detail" asp-route-id="@item.id"
                                class="btn btn-info p-2">Info</a>
                                <a type="button" asp-action="Update" asp-route-id="@item.id"
                                class="btn btn-warning p-2">Update</a>
                                <a asp-action="Delete" asp-route-id="@item.id" type="button"
                                class="btn btn-danger p-2">Delete</a>
                            </div>
                        <td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>